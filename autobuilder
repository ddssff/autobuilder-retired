#!/bin/sh

CONFIGDIR=$HOME/.autobuilder.d
CONFIGFILE=$CONFIGDIR/autobuilder.hs

[ -d $CONFIGDIR ] || mkdir -p $CONFIGDIR
[ -f $CONFIGFILE ] || {
   cp /usr/lib/autobuilder/autobuilder.hs $CONFIGFILE
   echo "Creating a default configuration file at $CONFIGFILE.  Please edit it and re-run."
   exit 0
}
sudo runhaskell -i$CONFIGDIR -package=base-3.0.3.0 $CONFIGFILE $*
